config FS_APPS_GSTREAMER_PLUGINS_IMX_3_0_7
	bool "gstreamer-plugins-imx 3.0.7"
	select FS_APPS_GSTREAMER_PLUGINS_BASE
	select FS_APPS_GSTREAMER
	select FS_APPS_IMX_LIB_4_0_0
	select FS_APPS_LIB_FSL_CODEC_3_0_8
	select FS_APPS_LIB_FSL_PARSER_3_0_8
	select FS_APPS_LIB_FSL_VPU_WRAP_1_0_35
	select FS_APPS_FIRMWARE_IMX_4_0_0
	select FS_APPS_GSTREAMER_PLUGINS_BAD
	select FS_APPS_GSTREAMER_PLUGINS_GOOD_0_10_31
	select FS_APPS_GSTREAMER_PLUGINS_UGLY
	help
	    This option enables the freescale gstreamer plugins for iMX6 boards, kernel 
	    version 3.0.35-4.0.0
